            <h1>Daftar Pesanan</h1>
            <div class="row">

                <div class="col-md-8">
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">Paket Reguler</h3>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered" id="tabel">
                                <thead>
                                    <tr>
                                        <th style="width: 5%">No Trans.</th>
                                        <th style="width: 25%">Nama Pelanggan</th>
                                        <th style="width: 20%">Jenis Pakaian</th>
                                        <th style="width: 5%">Jumlah Pakaian</th>
                                        <th style="width: 5%">Total Berat</th>
                                        <th style="width: 20%">Tipe Peng.</th>
                                        <th style="width: 10%">Biaya Pesanan</th>
                                        <th style="width: 10%">Status</th>
                                    </tr>
                                </thead>
                                <tbody id="data">
                                    <% let count_reguler = 0 %> 
                                    <% order.forEach(el => { %>
                                        <% if (el.paket == "REGULER") { %>
                                            <tr class="isi-data">
                                                <td> <%= el.id %> </td>
                                                <td> <%= el.nama_pelanggan %> </td>
                                                <td> <%= el.jenis_pakaian %> </td>
                                                <td> <%= el.jumlah_pakaian %> </td>
                                                <td> <%= el.total_berat %> </td>
                                                <td> <%= el.tipe_pengantaran %> </td>
                                                <td> <%= el.biaya_pesanan %> </td>
                                                <td> <%= el.status %> </td>
                                            </tr>
                                            <% if (el.status == "SELESAI") { %>
                                                <tr class="hide">
                                                    <td colspan="8">Estimasi Selesai : <%= el.tanggal %> <br> Tanggal Selesai : <%= el.tanggal_selesai %></td>
                                                </tr>
                                            <% } else { %>
                                                <tr class="hide">
                                                    <td colspan="8">Estimasi Selesai : <%= el.tanggal %> </td>
                                                </tr>
                                            <% } %>
                                            <% count_reguler += 1 %> 
                                        <% } %>
                                    <% }) %>
                                    <% if (count_reguler == 0) { %>
                                        <tr>
                                            <td colspan="8" style="text-align:center;">Belum ada pesanan</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

                <div class="col-md-8" id="tabel2">
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">Paket Medium</h3>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered" id="tabel">
                                <thead>
                                    <tr>
                                        <th style="width: 5%">No Trans.</th>
                                        <th style="width: 25%">Nama Pelanggan</th>
                                        <th style="width: 20%">Jenis Pakaian</th>
                                        <th style="width: 5%">Jumlah Pakaian</th>
                                        <th style="width: 5%">Total Berat</th>
                                        <th style="width: 20%">Tipe Peng.</th>
                                        <th style="width: 10%">Biaya Pesanan</th>
