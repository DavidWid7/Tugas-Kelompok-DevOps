                                                <% } %>
                                            <% } %>
                                            <% count_medium += 1 %> 
                                        <% } %>
                                    <% }) %>
                                    <% if (count_medium == 0) { %>
                                        <tr>
                                            <td colspan="8" style="text-align:center;">Belum ada pesanan</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-8" id="tabel3">
                    <div class="card card-warning">
                        <div class="card-header">
